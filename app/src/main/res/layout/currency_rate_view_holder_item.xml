<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currency_rate_view_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/indent_8dp"
    app:cardCornerRadius="@dimen/indent_4dp"
    app:cardElevation="@dimen/indent_4dp"
    app:strokeColor="@color/gray"
    app:strokeWidth="@dimen/indent_1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/separator"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageView
            android:id="@+id/country_flag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/indent_4dp"
            android:layout_weight="1"
            android:contentDescription="@string/country_flag"
            android:gravity="center"
            android:src="@drawable/usa" />

        <TextView
            android:id="@+id/currency_full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/indent_4dp"
            android:layout_weight="4"
            android:gravity="center"
            tools:text="@string/currency_full_name" />

        <TextView
            android:id="@+id/buying_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/indent_4dp"
            android:layout_weight="3"
            android:gravity="center"
            tools:text="@string/bay" />

        <TextView
            android:id="@+id/selling_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/indent_4dp"
            android:layout_weight="3"
            android:gravity="center"
            tools:text="@string/sale" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>